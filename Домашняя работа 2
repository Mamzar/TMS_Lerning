func minus(a: Int, b : Int){
    print(a-b)
    print(b-a)
}
func minus(a: Double, b: Double){
    print(a-b)
    print(b-a)
}
 
func minus(a: Int, b: Int, c: Int ){
    print(a - b - c)
    print(b - a - c)
    print(c - b - а)
}
