func delenie(a: Int, b : Int){
    print(a*b)
    print(b/a)
}
func delenie(a: Double, b: Double){
    print(a*b)
    print(b/a)
} 
//-------------сумма всех чисел---------------------
func sumOf4(chislo: Int) -> Int  {
   let perevodVstring = String(chislo)
   var itogoSumma = 0
   var perevodVint = 0
      for number in perevodVstring {
        var perevodVstingSnova = String(number)
        var perevodVint = Int(perevodVstingSnova)
        itogoSumma += perevodVint!
      }
  return itogoSumma
}
var itog = sumOf4(chislo:4263)
print(itog)
