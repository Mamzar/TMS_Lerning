func fact(chislo: Int) -> Int {
var x = 1
var w = 1
    repeat {
        x += 1
        w = w * x
           
    } while x != chislo
    return w
  }
     var r = (fact (chislo:6))
     print(r)
//---------------------------
func fact(number: Int) -> Int {
    var x = 1
    for i in 1...number {
        x = x * i
    }
    return x
}
fact(number: 5)
//----------факториал-----
func fact(chislo: Int) -> Int {
var x = 1
var w = 1
  while x != chislo + 1 {
   w = w * x
      x += 1  
  }
  return w
}
   var r = (fact (chislo:5))
   print(r)
//-----------------сравнение---------------------
func sravnenie(stroka1: String, stroka2: String)->Bool {
  if stroka1 > stroka2 {
    return true
  } else {
    return false
  }
}
var q = sravnenie(stroka1: "абв", stroka2: "ввш")
print(q)
//-------------------степень--------------------------
func stepen(number: Int, stepen: Int=3)-> Int {
var x = 1
  for i in 1...stepen {  
  x *= number 
  }
return x
}
var t = stepen(number:3)
print(t)
//--------------зациклить функцию-------------------------------
 func countdown(firstFunc number: Int) { 
      print(number) 
      if number > 0 { 
          countdown(firstFunc:number)
      } 
  } 
  countdown(firstFunc: 20) 
